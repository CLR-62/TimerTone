<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:TimerTone.Core"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="1000"
        x:Class="TimerTone.UI.MainWindow"
        Title="TimerTone"
        Background="#010409"
        Height="1000"
        Width="600"
        MinHeight="250"
        MinWidth="150"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Foreground="#f0f6fc">

    <Grid RowDefinitions="40, *">

        <Border x:Name="HeadBorder"
                Background="#0d1117"
                BorderBrush="#1a2332"
                BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <!-- App branding -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="14,0,0,0"
                            Spacing="8">
                    <!-- Small decorative dot -->
                    <Image Source="../Gfx/Icons/appIcon.png" Height="20" Width="20"></Image>
                    <TextBlock Text="TimerTone"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#8b949e"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,6,0"
                            Spacing="2">
                    <Button Content="─"
                            Classes="Trans"
                            FontSize="11"
                            Background="Transparent"
                            Click="OnMinimize_Click"/>
                    <Button Content="✕"
                            Classes="Trans CloseBtn"
                            FontSize="11"
                            Background="Transparent"
                            Click="OnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        
        <Border Grid.Row="1" Margin="12,12,12,12">
            <Grid RowDefinitions="Auto, Auto, *">

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="6,4,6,12">
                    <TextBlock Text="Programs"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#f0f6fc"/>
                    <TextBlock Text="Track time spent in your applications"
                               FontSize="12"
                               Foreground="#484f58"
                               Margin="0,4,0,0"/>
                </StackPanel>

                
                <Border Grid.Row="1"
                        Background="#0d1117"
                        CornerRadius="10"
                        Padding="12,10"
                        Margin="0,0,0,10"
                        BorderBrush="#1a2332"
                        BorderThickness="1">
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="Status label"
                                           FontSize="12"
                                           x:Name="StatusLabelBlock"
                                           Foreground="#8b949e"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Classes="Secondary"
                                Margin="10,0"
                                x:Name="StartMonitor"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="⤝"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="0,-2,0,0"/>
                                <TextBlock Text="Start"
                                           FontSize="13"
                                           x:Name="StartMonitorLabel"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        
                        <Button Grid.Column="2"
                                Classes="Primary"
                                x:Name="NewProgramButton">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="+"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="0,-2,0,0"/>
                                <TextBlock Text="New program"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                
                <Border Grid.Row="2"
                        Background="#0d1117"
                        CornerRadius="12"
                        BorderBrush="#1a2332"
                        BorderThickness="1"
                        ClipToBounds="True"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer>
                        <ListBox Name="programsListBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="6,6">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="core:ProgramListItem">
                                    <Border Padding="12,10"
                                            CornerRadius="10">
                                        <Grid ColumnDefinitions="Auto, *, Auto"
                                              HorizontalAlignment="Stretch">

                                            <!-- Program Icon -->
                                            <Border Grid.Column="0"
                                                    Width="48" Height="48"
                                                    CornerRadius="10"
                                                    Background="#151b23"
                                                    ClipToBounds="True"
                                                    VerticalAlignment="Center">
                                                <Image Source="{Binding progIcon}"
                                                       Width="32" Height="32"
                                                       Stretch="Uniform"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                            </Border>

                                            
                                            <StackPanel Grid.Column="1"
                                                        Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        Margin="14,0,0,0">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#f0f6fc"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Spacing="8"
                                                            Margin="0,4,0,0">
                                                    <Border Background="#122117"
                                                            CornerRadius="4"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding TotalElapsed}"
                                                                   FontSize="11"
                                                                   Foreground="#3fb950"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Path}"
                                                               FontSize="11"
                                                               Foreground="#484f58"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>

                                            
                                            <Button Grid.Column="2"
                                                    Classes="Danger"
                                                    VerticalAlignment="Center"
                                                    Width="34" Height="34"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Click="DeleteProgramFromList"
                                                    CommandParameter="{Binding}">
                                                <Image Source="../Gfx/Icons/delete_icon.png"
                                                       Stretch="Uniform"
                                                       Height="14" Width="14"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
